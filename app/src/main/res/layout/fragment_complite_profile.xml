<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_complete_profile"
        android:textSize="24sp"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE OF BIRTH"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tvDatePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_date"
                android:background="@drawable/br_edittext"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_date"
                android:background="@drawable/br_edittext"
                android:entries="@array/gender"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOWN/CITY/REGION"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/br_edittext"
                android:padding="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NATIONALITY"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_date"
                android:background="@drawable/br_edittext"
                android:padding="24dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE PHONE NUMBER"
            android:layout_marginLeft="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/br_edittext"
                android:textColor="#000"
                android:textSize="14sp"
                android:padding="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/br_edittext"
                android:textColor="#000"
                android:textSize="14sp"
                android:padding="8dp"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDY LEVEL"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/br_edittext" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDENT ID NAME"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/br_edittext"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSTITUTION"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/br_edittext"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE PICTURE"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:background="@color/color_gray"/>
                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Upload picture"
                    android:textSize="10sp"
                    android:textColor="@color/color_white"
                    android:background="@drawable/button_shape_rsmall"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/tvBack_FCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_rsmall"
                    android:text="@string/button_back"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_white"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"/>
                <TextView
                    android:id="@+id/tvNext_FCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_rsmall"
                    android:text="@string/button_next"
                    android:textColor="@color/color_white"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="50dp"
                    android:paddingLeft="50dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>